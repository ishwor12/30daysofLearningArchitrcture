@model MenuItem
@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">⚠️ Confirm Delete</h3>
        </div>
        <div class="card-body p-4">
            <h4 class="text-dark">Are you sure you want to delete this item?</h4>
            <p class="fs-5 text-muted">
                <strong>@Model.Name</strong> — @Model.Description <br />
                <span class="text-success fw-bold">$@Model.Price.ToString("0.00")</span>
            </p>
 
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle-fill"></i>
                This action <strong>cannot be undone</strong>. To confirm, type <code>DELETE</code> in the box below.
            </div>
 
            <form asp-action="Delete" method="post" id="deleteForm">
                <input type="hidden" asp-for="ItemId" />
                @Html.AntiForgeryToken() 

                <!-- Confirmation Input -->
                 <div class="mb-3">
                    <label for="confirmDelete" class="form-label fw-bold">Type DELETE to confirm:</label>
                    <input type="text" id="confirmDelete" class="form-control" placeholder="DELETE" />
                </div> 

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-4" id="deleteBtn" disabled >
                        <i class="bi bi-trash"></i> Delete Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

 @section Scripts {
    <script>
        // Enable delete button only when user types DELETE
        document.getElementById("confirmDelete").addEventListener("input", function () {
            const deleteBtn = document.getElementById("deleteBtn");
            if (this.value.trim().toUpperCase() === "DELETE") {
                deleteBtn.removeAttribute("disabled");
            } 
            else {
                deleteBtn.setAttribute("disabled", "true");
            }
        });
    </script> 
}