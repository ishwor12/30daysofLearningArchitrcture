@model MenuItem
@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">⚠️ Delete Confirmation</h3>
        </div>
        <div class="card-body p-4">
            <h4 class="text-dark">Are you sure you want to delete this item?</h4>
            <p class="fs-5 text-muted">
                <strong>Name:</strong> @Model.Name <br />
                <strong>Description:</strong> @Model.Description <br />
                <strong>Price:</strong> $@Model.Price.ToString("0.00") <br />
                <strong>Category:</strong> @Model.Category <br />
                <strong>Status:</strong>
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">Available</span>
                }
                else
                {
                    <span class="badge bg-secondary">Unavailable</span>
                }
            </p>

            <form asp-action="Delete" method="post" id="deleteForm">

                <input type="hidden" asp-for="ItemId" />

                <div class="alert alert-warning mt-4">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    This action cannot be undone. Click <strong>Delete</strong> to permanently remove this item.
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                        @* <button type="submit" class="btn btn-danger px-4">
                         *@
                         <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>