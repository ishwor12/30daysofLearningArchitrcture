@model MenuItem
@{
    ViewData["Title"] = "Menu Item Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">@Model.Name</h3>
        </div>
        <div class="card-body p-4">
            <!-- Category Badge -->
            <span class="badge bg-info text-dark mb-3">@Model.Category</span>

            <!-- Description -->
            <p class="text-muted fs-5">@Model.Description</p>

            <!-- Price -->
            <h4 class="text-success fw-bold">
                <i class="bi bi-currency-dollar"></i> @Model.Price.ToString("0.00")
            </h4>

            <!-- Availability -->
            <p>
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">Available</span>
                }
                else
                {
                    <span class="badge bg-danger">Not Available</span>
                }
            </p>

            <!-- Related Orders -->
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <h5 class="mt-4">Ordered In:</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var orderItem in Model.OrderItems)
                    {
                        <li class="list-group-item">
                            <strong>Quantity:</strong> @orderItem.Quantity
                            <span class="text-muted">(@orderItem.Notes)</span>
                        </li>
                    }
                </ul>
            }
        </div>

        <!-- Footer Buttons -->
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-primary me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.ItemId" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>