<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Restaurant Dashboard</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Feather icons -->
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header text-center py-4">
                <img src="/mnt/data/d0a8c046-f316-4956-a49c-0cda3b6a0f62.png" alt="flower" class="brand-flower" />
                <h4 class="mt-2 brand-text">Miku-Style Dashboard</h4>
            </div>
            <ul class="list-unstyled components">
                <li class="active"><a asp-controller="Home" asp-action="Index"><i data-feather="home"></i> Dashboard</a></li>
                <li><a asp-controller="Menu" asp-action="Index"><i data-feather="book-open"></i> Menu</a></li>
                <li><a asp-controller="Table" asp-action="Index"><i data-feather="grid"></i> Tables</a></li>
                <li><a asp-controller="Order" asp-action="Index"><i data-feather="shopping-cart"></i> Orders</a></li>
            </ul>
            <div class="sidebar-footer text-center text-muted">
                <small>&copy; @DateTime.Now.Year Restaurant</small>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="page-content" class="w-100">
            <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary d-md-none me-2" id="sidebarCollapse">
                        <i data-feather="menu"></i>
                    </button>
                    <a class="navbar-brand" href="#">Restaurant Dashboard</a>

                    <form class="d-none d-md-flex ms-auto me-3" role="search">
                        <input id="globalSearch" class="form-control form-control-sm" type="search" placeholder="Search menu / orders" aria-label="Search" />
                    </form>

                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Order" asp-action="Create"><i data-feather="plus"></i> New Order</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">Admin</a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </header>

            <main class="container-fluid p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS + dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <script>
        feather.replace()
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
