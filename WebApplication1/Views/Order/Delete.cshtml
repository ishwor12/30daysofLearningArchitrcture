@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<link rel="stylesheet" href="~/css/orders.css" />

<div class="container mt-4">
    <h2 class="text-danger">Delete Order #@Model.OrderId</h2>

    <div class="card p-3 mb-3">
        <h5>Order Summary</h5>
        <dl class="row">
            <dt class="col-sm-3">Table</dt>
            <dd class="col-sm-9">@Model.Table?.TableNumber</dd>

            <dt class="col-sm-3">Placed</dt>
            <dd class="col-sm-9">@Model.DateTimePlaced.ToLocalTime().ToString("g")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9">@String.Format("{0:C}", Model.TotalAmount)</dd>
        </dl>
    </div>

    <div class="card p-3 mb-3">
        <h5>Items</h5>
        <table class="table">
            <thead>
                <tr><th>Menu Item</th><th>Qty</th><th>Notes</th><th>Price</th></tr>
            </thead>
            <tbody>
                @foreach (var it in Model.OrderItems)
                {
                    <tr>
                        <td>@it.MenuItem?.Name</td>
                        <td>@it.Quantity</td>
                        <td>@it.Notes</td>
                        <td>
                            @{
                                var price = it.MenuItem != null ? it.MenuItem.Price * it.Quantity : 0;
                            }
                            @String.Format("{0:C}", price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="OrderId" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
