@model ResturanrtManagement.Models.Order
@inject ResturanrtManagement.Services.Interfaces.IMenuItemService MenuService

@{
    ViewData["Title"] = "Create Order";
}

<h3>Create Order</h3>

<form asp-action="Create" method="post">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Table</label>
            <select asp-for="TableId" class="form-select">
                <option value="">Select a table</option>
                @* In controller fill ViewBag.Tables or use a view model. *@
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Waiter(UserId)</label>
            <input asp-for="UserId" class="form-control" placeholder="User id" />
        </div>

        <div class="col-12 mt-3">
            <h5>Order Items</h5>
            <div id="orderItemsContainer"></div>

            <template id="orderItemTemplate">
                <div class="order-item-row row g-2 align-items-end mb-2">
                    <div class="col-md-6">
                        <label class="form-label">Menu Item</label>
                        <select name="OrderItems[][ItemId]" class="form-select">
                            <option value="">Select item</option>
                            @* server side: render options into template via JS or pre-render a JSON list and populate select via JS *@
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Qty</label>
                        <input type="number" name="OrderItems[][Quantity]" class="form-control" value="1" min="1" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Notes</label>
                        <input type="text" name="OrderItems[][Notes]" class="form-control" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-danger remove-order-item">X</button>
                    </div>
                </div>
            </template>

            <div class="mt-2">
                <button type="button" class="btn btn-outline-primary add-order-item"><i data-feather="plus"></i> Add Item</button>
            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-success">Place Order</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // optional: populate menu items into selects via server-rendered JSON
        // Example: const menuItems = @Html.Raw(Json.Serialize(ViewBag.MenuItems));
    </script>
}
