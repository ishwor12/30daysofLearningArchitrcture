@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Orders</h3>
    <a asp-action="Create" class="btn btn-primary"><i data-feather="plus"></i> Place Order</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Placed</th>
                    <th>Table</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    var statusClass = o.Status == OrderStatus.Pending ? "bg-secondary" :
                    o.Status == OrderStatus.Confirmed ? "bg-info" :
                    o.Status == OrderStatus.InProgress ? "bg-warning" :
                    o.Status == OrderStatus.ReadyForPickup ? "bg-primary" :
                    o.Status == OrderStatus.Delivered ? "bg-success" :
                    o.Status == OrderStatus.Paid ? "bg-dark" :
                    "bg-danger";

                    <tr>
                        <td>@o.OrderId</td>
                        <td>@o.DateTimePlaced.ToLocalTime().ToString("g")</td>
                        <td>@o.Table?.TableNumber</td>
                        <td>@String.Format("{0:C}", o.TotalAmount)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Edit" asp-route-id="@o.OrderId" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
