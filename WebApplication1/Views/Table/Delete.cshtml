@model ResturanrtManagement.Models.Table
@using ResturanrtManagement.Models.Enum

@{
    ViewData["Title"] = "Delete Table";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Table</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this table?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Table Number</dt>
        <dd class="col-sm-9">@Model.TableNumber</dd>

        <dt class="col-sm-3">Max Capacity</dt>
        <dd class="col-sm-9">@Model.MaxCapacity</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="TableId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
