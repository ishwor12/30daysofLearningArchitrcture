@model ResturanrtManagement.Models.Table
@using ResturanrtManagement.Models.Enum

@{
    ViewData["Title"] = "Edit Table";
}

<div class="container mt-4">
    <h2>Edit Table</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="TableId" />

        <div class="mb-3">
            <label class="form-label">Table Number</label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Max Capacity</label>
            <input asp-for="MaxCapacity" class="form-control" />
            <span asp-validation-for="MaxCapacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Status</label>
            <select asp-for="Status" class="form-select"
                    asp-items="Html.GetEnumSelectList<TableStatus>()"></select>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
