@model ResturanrtManagement.Models.Table
@{
    ViewData["Title"] = "Create Table";
}

<h2>Create Table</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TableNumber" class="control-label"></label>
        <input asp-for="TableNumber" class="form-control" />
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxCapacity" class="control-label"></label>
        <input asp-for="MaxCapacity" class="form-control" />
        <span asp-validation-for="MaxCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<TableStatus>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
